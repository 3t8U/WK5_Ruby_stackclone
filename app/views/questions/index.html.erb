<h1>Questions</h1>

<% if @questions.any? %>
  <ul>
    <% @questions.each do |question| %>
      <li><%= link_to question.quest_body, question_path(question) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no questions yet.</p>
<% end %>
  <h1>Most recent questions</h1>
<% if @most_recent.any? %>
  <ul>
    <% @most_recent.each do |most_recent| %>
      <li><%= link_to most_recent.quest_body, question_path(most_recent) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no most recent questions yet.</p>
<% end %>

<p><%= link_to "Create new question", new_question_path %></p>
